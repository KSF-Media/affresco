{
  "name": "@affresco/mitt-konto",
  "version": "1.0.0",
  "description": "A mitt konto frontend, allows customers to manage their subscriptions",
  "license": "MIT",
  "dependencies": {
    "create-react-class": "^15.6.3",
    "less": "^3.8.1",
    "react": "^16.12",
    "react-date-picker": "^8.4.0",
    "react-dom": "^16.12",
    "react-router-dom": "^5.2.0",
    "xhr2": "0.2.1"
  },
  "devDependencies": {
    "puppeteer": "^8.0.0",
    "start-server-and-test": "^2.0.0"
  },
  "scripts": {
    "start": "parcel index.html -p 8000",
    "build": "spago build && parcel build index.html --public-url ./ --no-source-maps && cp xd_receiver.html _redirects ./dist",
    "wait-for-parcel": "perl -e '$a = 1; while ($a) { $a = system(\"curl http://localhost:8000/\"); sleep(1)}'",
    "test": "start-server-and-test http://localhost:8000 'spago -x test.dhall test'",
    "clean": "rm -rf .cache .spago dist node_modules output"
  }
}
