{
  "name": "@affresco/vetrina-test",
  "version": "1.0.0",
  "description": "A test app for the glorious Vetrina, for dev and end-to-end tests",
  "license": "MIT",
  "main": "index.js",
  "dependencies": {
    "create-react-class": "^15.6.3",
    "dotenv": "^16.0.1",
    "less": "^3.8.1",
    "puppeteer": "^8.0.0",
    "querystring-es3": "^0.2.1",
    "react": ">=15.5",
    "react-date-picker": "^7.5.0",
    "react-dom": ">=15.5"
  },
  "scripts": {
    "start": "PORT=8000 node -r dotenv/config build.mjs serve",
    "build": "spago build && node -r dotenv/config build.mjs",
