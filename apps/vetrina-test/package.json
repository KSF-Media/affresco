    "test": "#spago build && npm install && npm run start & npm run wait-for-esbuild && spago test"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-html": "^0.15.37",
    "esbuild-plugin-less": "^1.1.7"
  }
