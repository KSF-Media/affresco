{
  "private": true,
  "name": "affresco",
  "dependencies": {
    "lerna": "^3.3.2",
    "parcel-bundler": "^1.10.3",
    "purescript": "^0.12.0",
    "purescript-spago": "^0.6.2",
    "yarn": "^1.12.3"
  },
  "bootstrap": {
    "useWorkspaces": true,
    "npmClient": "yarn"
  },
  "scripts": {
    "install-all": "yarn install && spago install && lerna bootstrap",
    "build-purs": "spago build --path \"packages/*/src/**/*.purs\" --path \"apps/*/src/**/*.purs\"  && ./build-purs.rb",
    "clean": "rm -rf .cache .spago .psci_modules node_modules output dist .yarn-cache"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "yarn": "^1.13.0"
  }
}
