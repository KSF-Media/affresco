{
  "private": true,
  "name": "affresco",
  "dependencies": {
    "lerna": "^3.3.2",
    "parcel-bundler": "^1.10.3",
    "psc-package-bin-simple": "^1.0.1",
    "purescript": "^0.12.0",
    "purp-bin-simple": "^1.0.1",
    "yarn": "^1.10.1"
  },
  "bootstrap": {
    "useWorkspaces": true,
    "npmClient": "yarn"
  },
  "scripts": {
    "build-purs": "psc-package build \"packages/*/src/**/*.purs\" \"apps/*/src/**/*.purs\"  && ./build-purs.rb",
    "clean": "rm -rf .cache .psc-package .psci_modules node_modules output dist .yarn-cache"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
